.target-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 50px;
  border-top: 1px solid #EDEDED;
  border-bottom: 1px solid #EDEDED;
  margin-bottom: 10px;
}

.target-icon {
  width: 15%
}

.target-icon image{
  width: 30px;
  height: 30px;
  margin: 10px;

}

.target-content {
  width: 70%;
  margin-top: 5px;
}

.target-title {
  line-height: 20px;
  /* top: 5px; */
}

.target-progress {
  margin-top: 5px;
}

.target-mark {
  width: 15%;
}

.target-mark image {
  width: 25px;
  height: 25px;
  margin: 15px;
}


